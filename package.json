{
  "name": "node-pptx-png",
  "version": "1.0.0",
  "description": "High-fidelity PPTX to PNG converter for Node.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sdruckerfig/node-pptx-png.git"
  },
  "bugs": {
    "url": "https://github.com/sdruckerfig/node-pptx-png/issues"
  },
  "homepage": "https://github.com/sdruckerfig/node-pptx-png#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "pptx",
    "powerpoint",
    "png",
    "image",
    "converter",
    "render",
    "thumbnail",
    "openxml",
    "slides",
    "presentation"
  ],
  "author": "Steve Drucker",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "skia-canvas": "^1.0.0",
    "fast-xml-parser": "^4.3.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
